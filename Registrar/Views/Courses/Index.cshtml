@{
  Layout = "_Layout";
}

@using Registrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

<ul>
  @foreach(Course category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CourseId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>