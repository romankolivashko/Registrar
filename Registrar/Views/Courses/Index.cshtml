@{
  Layout = "_Layout";
}

@using Registrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

<ul class="list-group">
  @foreach(Course course in Model)
  {
    <li class="list-group-item">@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
  }
</ul>

<button>@Html.ActionLink("Add new course", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>